{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "path": {
                "type": "string"
            },
            "alias": {
                "type": "string"
            },
            "version": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "features": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        }
                    },
                    "required": ["name", "type"]
                }
            }
        },
        "required": ["name", "path", "features"]
    }
}